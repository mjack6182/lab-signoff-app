<!DOCTYPE html>
<html>
<head>
    <title>Lab Signoff WebSocket Test</title>
    <script src="https://cdn.jsdelivr.net/npm/sockjs-client@1.6.1/dist/sockjs.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/stompjs@2.3.3/lib/stomp.min.js"></script>
</head>
<body>
    <h1>Lab Signoff WebSocket Test</h1>

    <label>Group ID: <input type="text" id="groupId" value="Group-1"></label><br>
    <label>Checkpoint Number: <input type="number" id="checkpointNumber" value="1"></label><br>
    <label>Status: 
        <select id="status">
            <option value="PASS">PASS</option>
            <option value="RETURN">RETURN</option>
        </select>
    </label><br>
    <button onclick="sendUpdate()">Send Checkpoint Update</button>

    <h2>Messages Received:</h2>
    <ul id="messages"></ul>

    <script>
        let stompClient = null;

        function connect() {
            const socket = new SockJS('http://localhost:8080/ws'); // backend endpoint
            stompClient = Stomp.over(socket);

            stompClient.connect({}, function(frame) {
                console.log('Connected: ' + frame);

                // Subscribe to the backend topic for updates
                stompClient.subscribe('/topic/group-updates', function(message) {
                    const msg = JSON.parse(message.body);
                    const li = document.createElement('li');
                    li.textContent = `Group: ${msg.groupId}, Checkpoint: ${msg.checkpointNumber}, Status: ${msg.status}`;
                    document.getElementById('messages').appendChild(li);
                });
            });
        }

        function sendUpdate() {
            if (stompClient) {
                const groupId = document.getElementById('groupId').value;
                const checkpointNumber = parseInt(document.getElementById('checkpointNumber').value);
                const status = document.getElementById('status').value;

                const update = {
                    groupId: groupId,
                    checkpointNumber: checkpointNumber,
                    status: status
                };

                stompClient.send("/app/broadcast", {}, JSON.stringify(update)); // send to backend
                alert("CheckpointUpdate sent!");
            }
        }

        connect();
    </script>
</body>
</html>